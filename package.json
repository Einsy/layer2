{
  "name": "layer2",
  "version": "0.3.0",
  "description": "A streaming API for the data link layer",
  "keywords": [
    "wifi",
    "802.11",
    "ethernet",
    "mac",
    "frame",
    "packet",
    "stream",
    "monitor",
    "capture",
    "injection",
    "pcap",
    "wireshark",
    "tcpdump",
    "libtins"
  ],
  "files": [
    "etc/idls",
    "src",
    "lib",
    "binding.gyp"
  ],
  "main": "./lib",
  "scripts": {
    "install-local": "CPLUS_INCLUDE_PATH=\"$(pwd)/etc/deps/libtins/include:$(pwd)/etc/deps/avro/lang/c++/build/include:/usr/local/include\" LIBRARY_PATH=\"$(pwd)/etc/deps/libtins/build/lib:$(pwd)/etc/deps/avro/lang/c++/build:/usr/local/lib\" npm install",
    "clean": "rm -rf build node_modules",
    "debug": "lldb -- node _mocha --no-timeouts",
    "test": "mocha"
  },
  "dependencies": {
    "avsc": "^3.3.3",
    "nan": "^2.2.0"
  },
  "devDependencies": {
    "mocha": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtth/layer2.git"
  },
  "author": {
    "name": "Matthieu Monsch",
    "email": "monsch@alum.mit.edu"
  },
  "license": "MIT"
}
