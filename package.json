{
  "name": "layer2",
  "version": "0.3.0",
  "description": "A streaming API for the data link layer",
  "keywords": [
    "wifi",
    "802.11",
    "ethernet",
    "mac",
    "frame",
    "packet",
    "stream",
    "monitor",
    "capture",
    "injection",
    "pcap",
    "wireshark",
    "tcpdump",
    "libtins"
  ],
  "files": [
    "src",
    "lib",
    "binding.gyp"
  ],
  "main": "./lib",
  "scripts": {
    "build-avro": "bash etc/scripts/build_avro.sh",
    "build": "node-gyp clean && node-gyp configure && node-gyp build",
    "clean": "rm -rf build node_modules etc/deps/avro/lang/c++/build",
    "debug": "lldb -- node _mocha --no-timeouts",
    "test": "mocha"
  },
  "dependencies": {
    "avsc": "^3.3.0",
    "nan": "^2.2.0"
  },
  "devDependencies": {
    "mocha": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtth/layer2.git"
  },
