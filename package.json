{
  "name": "layer2",
  "version": "0.2.0",
  "description": "A streaming API for the data link layer",
  "keywords": [
    "wifi",
    "802.11",
    "ethernet",
    "mac",
    "frame",
    "packet",
    "stream",
    "monitor",
    "capture",
    "injection",
    "pcap",
    "wireshark",
    "tcpdump",
    "libtins"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "src/",
    "binding.gyp",
    "package.json"
  ],
  "main": "./lib",
  "scripts": {
    "install": "node-gyp rebuild --release",
    "build": "node-gyp clean && node-gyp configure && node-gyp build",
    "clean": "rm -rf build node_modules",
    "debug": "lldb -- node $(npm bin)/_mocha --no-timeouts",
    "test": "$(npm bin)/mocha",
    "benchmark-capture": "cd benchmarks && make && node capture.js",
    "benchmark-decode": "cd benchmarks && make && node decode.js"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {
    "nan": "^1.4.1"
  },
  "devDependencies": {
    "mocha": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtth/layer2.git"
  },
  "author": {
    "name": "Matthieu Monsch",
    "email": "monsch@alum.mit.edu"
  },
  "license": "MIT"
}
